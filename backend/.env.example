# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application metadata
APP_NAME="Construction Safety AI Detection System"
APP_VERSION="1.0.0"
APP_AUTHOR="A-P-U-R-B-O"
APP_DESCRIPTION="AI-powered safety detection system for construction sites"

# Environment configuration
# Options: development, staging, production
ENVIRONMENT=production

# Debug mode (true/false)
# WARNING: Set to false in production!
DEBUG=false

# ============================================================================
# SERVER SETTINGS
# ============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Number of worker processes
# Recommended: 2 * CPU cores + 1
WORKERS=4

# Auto-reload on code changes (development only)
# Set to true only in development
RELOAD=false

# Base URL for the application
BASE_URL=http://localhost:8000

# ============================================================================
# CORS (Cross-Origin Resource Sharing) SETTINGS
# ============================================================================

# Allowed origins (comma-separated)
# Use * for all origins (not recommended in production)
# Example: http://localhost:3000,https://app.example.com
CORS_ORIGINS=*

# Allow credentials in CORS requests
CORS_CREDENTIALS=true

# Allowed HTTP methods
CORS_METHODS=*

# Allowed headers
CORS_HEADERS=*

# ============================================================================
# YOLO MODEL SETTINGS
# ============================================================================

# Model name
# Options: yolov8n.pt, yolov8s.pt, yolov8m.pt, yolov8l.pt, yolov8x.pt
# n=nano (fastest), s=small, m=medium, l=large, x=xlarge (most accurate)
MODEL_NAME=yolov8n.pt

# Inference device
# Options: cpu, cuda, mps (Apple Silicon)
MODEL_DEVICE=cpu

# Confidence threshold for detections (0.0 - 1.0)
# Lower = more detections but more false positives
# Higher = fewer detections but more accurate
MODEL_CONFIDENCE_THRESHOLD=0.5

# IoU (Intersection over Union) threshold for NMS
# Used to filter overlapping detections
MODEL_IOU_THRESHOLD=0.45

# Maximum number of detections per image
MODEL_MAX_DETECTIONS=100

# Model input size (must be multiple of 32)
# Larger = more accurate but slower
# Options: 320, 416, 512, 640, 1280
MODEL_INPUT_SIZE=640

# Enable half precision (FP16) for faster inference
# Only works with CUDA
MODEL_HALF_PRECISION=false

# Enable test-time augmentation (slower but more accurate)
MODEL_AUGMENT=false

# ============================================================================
# DETECTION SERVICE SETTINGS
# ============================================================================

# Enable detection result caching
DETECTION_CACHE_ENABLED=true

# Cache size (number of entries)
DETECTION_CACHE_SIZE=1000

# Auto-resize images for performance
DETECTION_RESIZE_ENABLED=true

# Maximum image dimensions for processing
DETECTION_MAX_WIDTH=640
DETECTION_MAX_HEIGHT=480

# ============================================================================
# ALERT SYSTEM SETTINGS
# ============================================================================

# Cooldown period between duplicate alerts (seconds)
# Prevents alert spam
ALERT_COOLDOWN_SECONDS=5

# Maximum alerts to generate per frame
ALERT_MAX_PER_FRAME=5

# Enable alert history tracking
ALERT_HISTORY_ENABLED=true

# Alert history size (number of entries)
ALERT_HISTORY_SIZE=1000

# Minimum alert severity to track
# Options: low, medium, high, critical
ALERT_MIN_SEVERITY=low

# ============================================================================
# DANGER CLASSIFICATION SETTINGS
# ============================================================================

# Temporal history size for pattern detection
DANGER_CLASSIFIER_HISTORY_SIZE=100

# Distance thresholds (in pixels)
# Critical danger distance
DANGER_CRITICAL_DISTANCE=50

# High risk distance
DANGER_HIGH_RISK_DISTANCE=100

# Moderate danger distance
DANGER_MODERATE_DISTANCE=200

# Safe distance
DANGER_SAFE_DISTANCE=300

# ============================================================================
# WEBSOCKET SETTINGS
# ============================================================================

# WebSocket heartbeat interval (seconds)
WS_HEARTBEAT_INTERVAL=30

# Maximum concurrent WebSocket connections
WS_MAX_CONNECTIONS=100

# WebSocket message queue size
WS_MESSAGE_QUEUE_SIZE=100

# Default FPS for video streaming
WS_DEFAULT_FPS=10

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Log format
# Options: simple, standard, detailed
LOG_FORMAT=detailed

# Enable JSON formatted logs (for log aggregation tools)
LOG_JSON_ENABLED=false

# Enable file logging
LOG_FILE_ENABLED=true

# Enable console logging
LOG_CONSOLE_ENABLED=true

# Enable log rotation
LOG_ROTATION_ENABLED=true

# Maximum log file size (MB)
LOG_MAX_SIZE_MB=10

# Number of backup log files
LOG_BACKUP_COUNT=5

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum upload file size (MB)
UPLOAD_MAX_SIZE_MB=10

# Allowed image extensions (comma-separated)
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,webp

# Upload directory
UPLOAD_DIR=uploads

# ============================================================================
# VIDEO PROCESSING SETTINGS
# ============================================================================

# Enable video file processing
VIDEO_PROCESSING_ENABLED=true

# Maximum video file size (MB)
VIDEO_MAX_SIZE_MB=100

# Allowed video formats (comma-separated)
VIDEO_ALLOWED_FORMATS=mp4,avi,mov,mkv

# Video output directory
VIDEO_OUTPUT_DIR=output_videos

# Default FPS for video processing
VIDEO_DEFAULT_FPS=10

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Enable performance monitoring
PERFORMANCE_MONITORING_ENABLED=true

# Performance logging interval (seconds)
PERFORMANCE_LOG_INTERVAL=300

# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Enable general caching
CACHE_ENABLED=true

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SECONDS=300

# Maximum number of cache entries
CACHE_MAX_SIZE=1000

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Secret key for signing/encryption
# IMPORTANT: Change this in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changeme-in-production-A-P-U-R-B-O-2025-11-07

# Enable API key authentication
API_KEY_ENABLED=false

# Valid API keys (comma-separated)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=

# Allowed IP addresses (comma-separated)
# Use * for all IPs
ALLOWED_IPS=*

# Enable HTTPS redirect
HTTPS_REDIRECT=false

# ============================================================================
# DATABASE SETTINGS (Optional - Future Use)
# ============================================================================

# Enable database connection
DATABASE_ENABLED=false

# Database connection URL
# PostgreSQL: postgresql://user:password@host:port/dbname
# MySQL: mysql://user:password@host:port/dbname
# SQLite: sqlite:///./database.db
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/construction_safety

# Database connection pool size
DATABASE_POOL_SIZE=5

# Database pool max overflow
DATABASE_POOL_MAX_OVERFLOW=10

# Database echo SQL queries (debug)
DATABASE_ECHO=false

# ============================================================================
# REDIS CACHE SETTINGS (Optional)
# ============================================================================

# Enable Redis connection
REDIS_ENABLED=false

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis password
REDIS_PASSWORD=changeme

# Redis database number
REDIS_DB=0

# Redis connection pool size
REDIS_POOL_SIZE=10

# Redis TTL (seconds)
REDIS_TTL=3600

# ============================================================================
# NOTIFICATION SETTINGS (Optional - Future Use)
# ============================================================================

# Enable notification service
NOTIFICATION_ENABLED=false

# ========================================
# Email Notifications
# ========================================

# Enable email notifications
EMAIL_ENABLED=false

# SMTP server settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# Email from address
EMAIL_FROM=noreply@construction-safety.com

# Email recipients (comma-separated)
EMAIL_TO=admin@example.com,safety@example.com

# ========================================
# SMS Notifications
# ========================================

# Enable SMS notifications
SMS_ENABLED=false

# Twilio credentials
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBERS=+1234567890,+0987654321

# ========================================
# Webhook Notifications
# ========================================

# Enable webhook notifications
WEBHOOK_ENABLED=false

# Webhook URL
WEBHOOK_URL=https://your-webhook-url.com/alerts

# Webhook authentication token
WEBHOOK_TOKEN=your-webhook-token

# Webhook retry attempts
WEBHOOK_RETRIES=3

# ========================================
# Push Notifications
# ========================================

# Enable push notifications
PUSH_ENABLED=false

# Firebase Cloud Messaging (FCM) settings
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-sender-id

# ============================================================================
# MONITORING & METRICS SETTINGS (Optional)
# ============================================================================

# Enable Prometheus metrics
PROMETHEUS_ENABLED=false

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Enable application performance monitoring (APM)
APM_ENABLED=false

# APM service (datadog, newrelic, elastic)
APM_SERVICE=datadog

# Datadog settings
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic settings
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=Construction-Safety-AI

# ============================================================================
# CLOUD STORAGE SETTINGS (Optional - Future Use)
# ============================================================================

# Cloud storage provider (s3, azure, gcs)
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_PROVIDER=s3

# AWS S3 settings
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=construction-safety-uploads

# Azure Blob Storage settings
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=construction-safety

# Google Cloud Storage settings
GCS_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=construction-safety-uploads
GCS_CREDENTIALS_FILE=/path/to/credentials.json

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
FEATURE_BATCH_PROCESSING=true
FEATURE_VIDEO_PROCESSING=true
FEATURE_REAL_TIME_STREAMING=true
FEATURE_DANGER_ASSESSMENT=true
FEATURE_ALERT_SYSTEM=true
FEATURE_STATISTICS=true
FEATURE_EXPORT=true
FEATURE_ANALYTICS=false

# ============================================================================
# EXPERIMENTAL FEATURES (Use with caution)
# ============================================================================

# Enable experimental features
EXPERIMENTAL_ENABLED=false

# Multi-model ensemble
EXPERIMENTAL_MULTI_MODEL=false

# Advanced temporal analysis
EXPERIMENTAL_TEMPORAL_ANALYSIS=false

# AI-powered recommendations
EXPERIMENTAL_AI_RECOMMENDATIONS=false

# ============================================================================
# DEVELOPMENT & TESTING SETTINGS
# ============================================================================

# Enable test mode
TEST_MODE=false

# Enable debug toolbar (development only)
DEBUG_TOOLBAR=false

# Enable SQL query profiling
PROFILE_SQL=false

# Enable request profiling
PROFILE_REQUESTS=false

# Mock external services (for testing)
MOCK_EXTERNAL_SERVICES=false

# ============================================================================
# DOCKER & DEPLOYMENT SETTINGS
# ============================================================================

# Docker container name prefix
COMPOSE_PROJECT_NAME=construction-safety

# Frontend port
FRONTEND_PORT=3000

# PostgreSQL settings (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=construction_safety

# Grafana settings (for docker-compose)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================================================
# METADATA
# ============================================================================

# Configuration created date
CREATED_DATE=2025-11-07 15:12:00 UTC

